import { convertClientsDataToJSON } from "../../functions/ConvertClientsDataToJSON";
import { turso } from "../../turso";

const path = Astro.url.pathname.replace(/\/$/, ""); // Elimina el "/" al final si existe.
const previousPath = path.substring(0, path.lastIndexOf("/")) || "/";

interface Props {
  selectedClient?: any;
}

const {selectedClient} = Astro.props;

let id_Cliente = "";
let clientData;
let result;

clientData = await turso.execute("SELECT * FROM Clientes")

const data = clientData.toJSON()

if (!selectedClient) {
  result = convertClientsDataToJSON(data)
}
else  {
  result = convertClientsDataToJSON(data).filter((p) => p.id_Cliente !== selectedClient.supplierID); 
}

